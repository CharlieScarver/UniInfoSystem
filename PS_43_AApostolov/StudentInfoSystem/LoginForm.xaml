<Window x:Class="StudentInfoSystem.LoginForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentInfoSystem"
        mc:Ignorable="d"
        Title="LoginForm" Height="200" Width="450">
    <Grid>
        <GroupBox Header="Login" Margin="0,6,0,0" >
        </GroupBox>

        <Label Content="Username: " HorizontalAlignment="Left" Height="24" Margin="40,50,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="usernameText" HorizontalAlignment="Left" Margin="130,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>

        <Label Content="Password: " HorizontalAlignment="Left" Height="24" Margin="40,90,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="passwordText" HorizontalAlignment="Left" Margin="130,92,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
        
        <Button x:Name="loginButton" Content="Login" HorizontalAlignment="Left" Margin="170,140,0,0" VerticalAlignment="Top" Width="100" Click="LoginButton_Click"/>
    </Grid>
</Window>
